@model Warhammer.Mvc.Models.CreatePlaceViewModel

@{
    ViewBag.Title = "Add Location or Place";
}

<h2>Add a Place in the Warhammer World</h2>
<p>Just put in the basics here to create the place. You can add more details and pictures and formatting etc once the log has been added.</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="content-wrapper">

        <div class="main-content">
            <div class="content-block">

                <div class="form-horizontal">
                    <h1>Add a Location or Place</h1>




                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})


                    <div class="form-group">
                        @Html.Label("Is this place part of a larger place? Pick something appropriate here so we know where this is:", htmlAttributes: new {@class = "control-label col-md-4"})
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.ParentId, Model.ParentPlace, "-", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ParentId, "", new {@class = "text-danger"})
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Tell us the name of the place or location:", htmlAttributes: new {@class = "control-label col-md-4"})
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Place.ShortName, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Place.ShortName, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="side-bar">
            <div class="content-block">
                <p>Location and Places.</p>
                <p>HAve you been somewhere worth noting down? This is the place for such places.</p>
            </div>
        </div>
    </div>
}
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
