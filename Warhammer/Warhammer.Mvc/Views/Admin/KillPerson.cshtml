@model Warhammer.Core.Entities.Person

@{
    ViewBag.Title = "Kill Person";
}
<div class="content-wrapper">

    <div class="main-content">
        <div class="content-block">
            
            
            @if (Model.IsDead)
            {
                <h2>The resurrection of @Html.ActionLink(Model.FullName, "Index", "Page", new {id = Model.Id}, null)</h2>
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(p => p.Id)
                    @Html.HiddenFor(p => p.IsDead)
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="resurrect NOW" class="btn btn-warning" />
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h2>Kill @Html.ActionLink(Model.FullName, "Index", "Page", new { id = Model.Id }, null)?</h2>
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(p => p.Id)
                    @Html.HiddenFor(p => p.IsDead)
                    <div class="form-horizontal">
                        <h2>Obiturary</h2>
                        <div id="Obiturary" class="editable">
                            @Html.Raw(Model.Obiturary)
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kill NOW" class="btn btn-warning" />
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>

    <div class="side-bar">
        <div class="content-block">
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
